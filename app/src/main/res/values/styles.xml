<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="backButton" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/semi_50_white</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/heading_3</item>
    </style>

    <style name="movieRating" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/heading_3</item>
    </style>

    <style name="movieTitle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/almost_white</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textSize">@dimen/heading_1</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowColor">@color/semi_50_black</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
